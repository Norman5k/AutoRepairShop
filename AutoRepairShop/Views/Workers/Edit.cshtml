@model Worker

@{
    ViewData["Title"] = "EditWorkers";
}

<h1>Редактирование информации о сотруднике</h1>

<h4>Информация о сотруднике</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Имя сотрудника</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Фамилия сотрудника</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spec" class="control-label">Специальность</label>
                <input asp-for="Spec" class="form-control" />
                <span asp-validation-for="Spec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recruitment" class="control-label">Дата приёма на работу</label>
                <input asp-for="Recruitment" class="form-control" />
                <span asp-validation-for="Recruitment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" /> |            
                <a asp-action="Index">Вернуться к просмотру таблицы</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
