@model Repair

@{
    ViewData["Title"] = "DeleteRepairs";
}

<h1>Удаление заказа</h1>

<div>
    <h4>Информация о заказе</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Тип починки
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RepairType)
        </dd>
        <dt class = "col-sm-2">
            Марка машины
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Car.Mark)
        </dd>
        <dt class = "col-sm-2">
            Фамилия работника
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Worker.Surname)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="fig">
        <h4>Вы уверены что хотите удалить данный заказ?</h4>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |                    
        <a asp-action="Index">Вернуться к просмотру таблицы</a>
    </form>
</div>
