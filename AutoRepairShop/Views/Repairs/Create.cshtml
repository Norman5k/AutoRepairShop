@model Repair

@{
    ViewData["Title"] = "CreateRepairs";
}

<h1>Заполнение полей информации о новом заказе</h1>

<h4>Информация о починке</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarId" class="control-label">Идентификатор автомобиля</label>
                <select asp-for="CarId" class ="form-control" asp-items="ViewBag.CarId"></select>
            </div>
            <div class="form-group">
                <label asp-for="WorkerId" class="control-label">Идентификатор работника</label>
                <select asp-for="WorkerId" class ="form-control" asp-items="ViewBag.WorkerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RepairType" class="control-label">Тип починки</label>
                <input asp-for="RepairType" class="form-control" />
                <span asp-validation-for="RepairType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" /> |
                 <a asp-action="Index">Вернуться к просмотру таблицы</a>
            </div>
        </form>
    </div>
</div>


   


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
